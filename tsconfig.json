{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2016",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "./config",
    "./scripts"
  ]
}