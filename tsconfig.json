{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "lib": ["es6", "es2018", "es7", "dom", "esnext"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["types/*", "datasources/*", "resolvers/*", "schemas/*"]
    }
  },
  "include": ["src/**/*"]
}
